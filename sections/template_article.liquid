<article>

{% for block in section.blocks %}
    {% case block.type %}
        {% when 'article_title' %}
            <div class="flex items-center justify-center">
                <div class="max-w-7xl text-center">
                    <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">{{ blog.title }}</a>
                    <h1 class="text-4xl md:text-6xl font-medium">{{ article.title }}</h1>
                </div>
            </div>        
        {% when 'article_author' %}
            <div class="flex items-center justify-center">
                <div class="max-w-7xl text-center">
                    {% if section.settings.enable_author %}
                        <small>{{ article.author }}</small>
                    {% endif %}
                </div>
            </div>
        {% when 'published_date' %}    
            {% if section.settings.enable_time %}
                <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: '%Y-%m-%d' }}</time>    
                {% endif %}
        {% when 'featured_image' %}    
            <img src="{{ article.image |  img_url: 'large' }}"  alt="{{ article.image.alt }}" width="100%" height="100%"/>
        {% when 'article_content' %}            
            <div class="content">{{ article.content }}</div>
        {% else %}
            
    {% endcase %}
{% endfor %}

</article>




{% schema %}
{
    "name": "Template Article",
    "settings": [
        {
            "type": "checkbox",
            "id": "enable_author",
            "default": true,
            "label": "Display Author Name"
        },
        {
            "type": "checkbox",
            "id": "enable_time",
            "default": true, 
            "label": "Display Time and Date"
        }
        ],
        "blocks":[   
        {
        "type": "article_title",
        "name":"Title",
        "limit": 1
        },
        {
        "type": "article_author",
        "name":"Author",
        "limit": 1
        },
        {
        "type": "published_date",
        "name":"Published Date",
        "limit": 1
        },
        {
        "type": "featured_image",
        "name":"Thumbnail",
        "limit": 1
        },
                {
        "type": "article_content",
        "name":"Content",
        "limit": 1
        }
    
    ]
}
{% endschema %}