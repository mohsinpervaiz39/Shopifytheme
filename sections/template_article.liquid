<article class="py-8">

{% for block in section.blocks %}
    {% case block.type %}
        {% when 'article_title' %}
            <div class="flex items-center justify-center">
                <div class="max-w-7xl text-center">
                    <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">{{ blog.title }}</a>
                    <h1 class="text-4xl md:text-6xl font-medium">{{ article.title }}</h1>
                </div>
            </div>        
        {% when 'article_author' %}
            <div class="flex items-center justify-center">
                <div class="max-w-7xl text-center">
                    {% if section.settings.enable_author %}
                        <small>{{ article.author }}</small>
                    {% endif %}
                </div>
            </div>
        {% when 'published_date' %}   
            <div class="flex items-center justify-center">
                <div class="max-w-7xl text-center">
                    {% if section.settings.enable_published_date %}
                        <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'on_date' }}</time>
                    {% endif %}
                </div>
            </div>
        {% when 'featured_image' %}    
            <div class="max-w-7xl bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden my-4">
                {% if article.image != blank %}
                    <img class="w-full h-80 md:h-96 object-cover object-center" src="{{ article.image | img_url: 'large'}}" alt="{{ article.image.alt }}" width="100%" height="100%"/>
                {% else %}
                    {% assign placeholder_image = 'lifestyle-1' %}
                    {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
                {% endif %}
            </div>
            
        {% when 'article_content' %}  
            <div class="flex items-center justify-center">
                <div class="max-w-4xl">
                    {{ article.content }}
                </div>
            </div>           
        {% else %}
            
    {% endcase %}
{% endfor %}

</article>

{% if blog.comments_enabled? %}
    <div id="comment" class="my-8">
        {% if article.comments_count > 0 %}
            
            {% else %}
            There are no comments in this article.    
        {% endif %}
    </div>

    <div id="comment_form" class="mb-8">
       {% form 'new_comment', article %}
         <div class="flex-1 mx-auto items-center justify-center max-w-4xl px-4">
          <div class="px-1 md:flex mb-3">

          <div class="px-3 md:w-1/2">
          <label for="comment_author" class="text-gray-700 font-medium uppercase text-xs mb-2">Name</label>
          </div>
          <div class="px-3 md:w-1/2"></div>

          </div>

         </div>
       {% endform %} 
    </div>
{% endif %}

{% schema %}
{
    "name": "Template Article",
    "settings": [
        {
            "type": "checkbox",
            "id": "enable_author",
            "default": true,
            "label": "Display Author Name"
        },
        {
            "type": "checkbox",
            "id": "enable_time",
            "default": true, 
            "label": "Display Time and Date"
        }
        ],
        "blocks":[   
        {
        "type": "article_title",
        "name":"Title",
        "limit": 1
        },
        {
        "type": "article_author",
        "name":"Author",
        "limit": 1
        },
        {
        "type": "published_date",
        "name":"Published Date",
        "limit": 1
        },
        {
        "type": "featured_image",
        "name":"Thumbnail",
        "limit": 1
        },
                {
        "type": "article_content",
        "name":"Content",
        "limit": 1
        }
    
    ]
}
{% endschema %}